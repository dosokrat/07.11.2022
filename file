/*
Напишите программу, которая задаёт массив из 8 
элементов и выводит их на экран.
*/


int[] arr = Console.ReadLine()
                .Split(' ', ',', StringSplitOptions.RemoveEmptyEntries)
                .Select(int.Parse)
                .ToArray();
Console.WriteLine(string.Join(", ", arr));


     
